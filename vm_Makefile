DISK = vdisk.img
RAM = 2048
CPUS = 1
CORES = 3
THREADS = 2
SHARED = /media/D/Faculta/PrakSec/shared

all:
	qemu-system-x86_64 -drive file=$(DISK),if=virtio -boot d -m $(RAM)\
		-machine type=q35,accel=kvm\
		-smp cores=$(CORES),threads=$(THREADS)\
		-redir tcp:22222::22\
		-fsdev local,security_model=passthrough,id=fsdev0,path=$(SHARED)\
		-device virtio-9p-pci,id=fs0,fsdev=fsdev0,mount_tag=hostshare
